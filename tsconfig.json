{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["es2015", "es2016", "esnext"],
    "resolveJsonModule": true,
    "outDir": "./build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
